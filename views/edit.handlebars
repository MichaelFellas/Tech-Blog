<div class="d-flex flex-column justify-content-center align-items-center">
  <div class="post-card">
    <h2 class="page-title">Update Post</h2>   
    <form class="form blogPost-form d-flex flex-column justify-content-center align-items-left">
         <p class="blogId">{{blog.id}}</p>
      <div class="form-group">
        <label class="postHeaders" for="blog-title">Title:</label>
        <input class="form-input blogTitle" type="text" id="blog-title" value={{blog.title}} /> 
      </div>
      <div class="form-group d-flex justify-content-top">
        <label class="postHeaders" for="blog-body">Post:</label>
        <textarea class="form-input blogContent" type="text" id="blog-body">{{blog.content}}</textarea>
      </div>
      <div class="d-flex flex-column justify-content-center">
      <div class="form-group">
        <button class="btn btn-primary btn-create" type="submit">Update</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/./js/update.js"></script>
<script src="/./js/delete.js"></script>

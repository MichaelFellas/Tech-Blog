     {{#each blogs as |blog|}}
      <div class="d-flex flex-column align-items-center">
    <section class="card">
      <a href="/post/{{id}}">
        <h2 class="getBlogtitle">{{title}}</h2>

        <div class="card-body d-flex flex-column align-items-center">
          
          <p class="getBlogContent">{{content}}</p>
          
          <h4>Author: {{user.name}}</h4>
          <h5>Created at: {{format_date blog_date}}</h5>
          
        </div>
      </a>
    </section>
    </div>
    {{/each}}
  

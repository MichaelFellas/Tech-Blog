<div class="d-flex justify-content-center">
    
  <div class="login-card">
    <h2 class="page-title login-margin">Login</h2>
    <form class="form login-form d-flex flex-column justify-content-center align-items-center">
      <div class="form-group">
        <label for="username-login">Username:</label>
        <input class="form-input" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group d-flex flex-column justify-content-center align-items-center">
        <button class="btn btn-primary" type="submit">Login</button>
        <a class="btn btn-primary" href="/signup">Sign Up</a>
      </div>
    </form>
  </div>

<script src="./js/login.js"></script>
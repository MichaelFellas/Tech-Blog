<div class="post-card">
    <h2 class="page-title">New Post</h2>
    <form class="form blogPost-form d-flex flex-column justify-content-center align-items-left">
      <div class="form-group">
        <label class="postHeaders" for="blog-title">Title:</label>
        <input class="form-input blogTitle" type="text" id="blog-title" />
      </div>
      <div class="form-group d-flex justify-content-top">
        <label class="postHeaders" for="blog-body">Post:</label>
        <textarea class="form-input blogContent" type="text" id="blog-body"></textarea>
      </div>
      <div class="d-flex justify-content-center">
      <div class="form-group">
        <button class="btn btn-primary btn-create" type="submit">CREATE</button>
        </div>
      </div>
    </form>
  </div>

  <script src="./js/newPost.js"></script>
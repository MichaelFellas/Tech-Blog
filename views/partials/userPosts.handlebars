<section class="container-blogs d-flex flex-column align-items-center ">
  <h3 class="user-name">{{user.name}}</h3>
  
    {{#each user.blogs as |blog|}}
    <section class="card">
      <a href="/blog/{{id}}">
        <h2 class="getBlogtitle">{{title}}</h2>

        <div class="card-body d-flex flex-column align-items-center">
          
          <p class="getBlogContent">{{content}}</p>
        </div>
      </a>
    </section>
    {{/each}}
  
</section>